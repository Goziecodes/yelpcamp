<% include ../partials/header %>



<div class="container">
        <h1 class="text-center">Add a new campground</h1>
    <div class="row">      
        <div style="width: 50%;  margin: 25px auto;">
            <form action="/campgrounds" method="post">
                <input class="form-control" type="text" name="name" placeholder="camp name" class="d-block mb-2">
                <input class="form-control" type="text" name="desc" placeholder="description" class="d-block mb-2">
                <input class="form-control" type="file" name="image" placeholder="image" class="d-block">
                <button class="btn btn-lg btn-success text-center btn-block" type="submit">submit</button>
            </form>
        </div>

    </div>
</div>









