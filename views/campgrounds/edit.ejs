<% include ../partials/header %>



<div class="container">
        <h1 class="text-center">Edit <%= campground.name %></h1>
    <div class="row">      
        <div style="width: 50%;  margin: 25px auto;">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                <input class="form-control" type="text" name="name" value="<%= campground.name %>" class="d-block mb-2">
                <input class="form-control" type="text" name="desc" value="<%= campground.description %>" class="d-block mb-2">
                <input class="form-control" type="file" name="image" value="<%=campground.image %>" class="d-block">
                <button class="btn btn-lg btn-success text-center btn-block" type="submit">submit</button>
            </form>
        </div>

    </div>
</div>









<% include ../partials/footer %>