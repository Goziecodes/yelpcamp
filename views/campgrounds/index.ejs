<% include ../partials/header %>
<header>
    <div class="jumbotron text-center">
        <div class="container">
            <h1>welcome to yelp camp</h1>
            <p>view handpicked beautiful camps all over the world</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add new campground</a>
            </p>
        </div>
    </div>
</header>





<div class="row text-center">
    <% camps.forEach(function(camp){ %>
    <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
        <div class="card-deck">
            <div class="card">
                <img class="card-img-top" src="<%= camp.img %>" alt="">
                <div class="card-body">
                    <h4 class="card-title">
                        <%= camp.name %>
                    </h4>
                </div>
                <p>
                   <a href="/campgrounds/<%= camp._id %>" class="btn btn-lg btn-success">More info</a> 
                </p>
            </div>
        </div>

    </div>

<% }); %>
</div>

<% include ../partials/footer %>

